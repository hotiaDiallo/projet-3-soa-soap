<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:tns="http://library/soap/web-services"
  targetNamespace="http://library/soap/web-services"
  elementFormDefault="qualified">

  <!--============== User ===================-->
  <xs:complexType name="userWS">
    <xs:sequence>
      <xs:element name="id" type="xs:int"/>
      <xs:element name="firstName" type="xs:string"/>
      <xs:element name="lastName" type="xs:string"/>
      <xs:element name="email" type="xs:string"/>
      <xs:element name="password" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>

  <!--============== Author ===================-->
  <xs:complexType name="authorWS">
    <xs:sequence>
      <xs:element name="id" type="xs:int" nillable="true"/>
      <xs:element name="firstName" type="xs:string"/>
      <xs:element name="work" type="tns:workWS"/>
    </xs:sequence>
  </xs:complexType>

  <!--============== Book ===================-->
  <xs:complexType name="bookWS">
    <xs:sequence>
      <xs:element name="id" type="xs:int" nillable="true"/>
      <xs:element name="esbn" type="xs:string"/>
      <xs:element name="bookStatus" type="xs:boolean"/>
    </xs:sequence>
  </xs:complexType>

  <!--============== Work ===================-->
  <xs:complexType name="workWS">
    <xs:sequence>
      <xs:element name="id" type="xs:int" nillable="true"/>
      <xs:element name="title" type="xs:string"/>
      <xs:element name="summary" type="xs:string"/>
      <xs:element name="releaseDate" type="xs:date"/>
      <xs:element name="author" type="tns:authorWS"/>
      <xs:element name="book" type="tns:bookWS"/>
    </xs:sequence>
  </xs:complexType>

  <!--============== Loan ===================-->
  <xs:complexType name="loanWS">
    <xs:sequence>
      <xs:element name="id" type="xs:int" nillable="true"/>
      <xs:element name="user" type="tns:userWS"/>
      <xs:element name="book" type="tns:bookWS"/>
      <xs:element name="borrowingDate" type="xs:date"/>
      <xs:element name="returnDate" type="xs:date"/>
      <xs:element name="loanStatus" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>


  <!-- ================= USER METHODS ============================ -->

  <!--============== LOGIN ===================-->
  <xs:element name="GetUserLoginRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="email" type="xs:string"/>
        <xs:element name="password" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="GetUserLoginResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="user" type="tns:userWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== GET USER BY ID ===================-->
  <xs:element name="getUserByIdRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="id" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getUserByIdResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="user" type="tns:userWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== GET WORK BY ID =================== -->
  <xs:element name="getWorkByIdRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="id" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getWorkByIdResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="work" type="tns:workWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== GET WORK BY TITLE =================== -->
  <xs:element name="getWorkByTitleRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="title" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getWorkByTitleResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="work" type="tns:workWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== GET WORK BY AUTHOR=================== -->
  <xs:element name="getWorkByAuthorRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="author" type="tns:authorWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getWorkByAuthorResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="work" type="tns:workWS" maxOccurs="unbounded" nillable="true"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!-- ============== GET WORK BY SUMMARY ===================-->
  <xs:element name="getWorkBySummaryRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="summary" type="xs:string"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getWorkBySummaryResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="work" type="tns:workWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== GET LOAN BY ID =================== -->
  <xs:element name="getLoanByIdRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="id" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getLoanByIdResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="loan" type="tns:loanWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== CREATE LOAN ===================-->
  <xs:element name="getCreateLoanRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="workId" type="xs:integer"/>
        <xs:element name="userId" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getCreateLoanResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="loan" type="tns:loanWS"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== EXTEND LOAN ===================-->
  <xs:element name="getExtendLoanRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="loanId" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getExtendLoanResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="response" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!--============== EXTEND LOAN ===================-->
  <xs:element name="getReturnLoanRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="loanId" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getReturnLoanResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="response" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!-- ============== GET ALL LOANS ===================-->
  <xs:element name="getLoansRequest">
    <xs:complexType/>
  </xs:element>

  <xs:element name="getLoansResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="loans" type="tns:loanWS" maxOccurs="unbounded" nillable="true"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!-- ============== GET Loan BY USER ===================-->
  <xs:element name="getLoanByUserRequest">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="userId" type="xs:integer"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="getLoanByUserResponse">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="loan" type="tns:loanWS" maxOccurs="unbounded" nillable="true"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>


</xs:schema>